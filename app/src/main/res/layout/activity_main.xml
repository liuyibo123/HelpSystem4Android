<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:fitsSystemWindows="true">



    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageButton
                android:layout_width="match_parent"
                android:id="@+id/myorder_btn"
                android:layout_gravity="center"
                android:src="@drawable/ic_myorder_before"
                android:background="@color/white"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageButton
                android:layout_width="match_parent"
                android:id="@+id/help_btn"
                android:layout_gravity="center"
                android:src="@drawable/ic_hand_before"
                android:background="@color/white"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageButton
                android:layout_width="match_parent"
                android:id="@+id/community_btn"
                android:layout_gravity="center"
                android:src="@drawable/ic_community_before"
                android:background="@color/white"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageButton
                android:layout_width="match_parent"
                android:id="@+id/love_btn"
                android:layout_gravity="center"
                android:src="@drawable/ic_love_before"
                android:background="@color/white"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1" />
        </LinearLayout>



    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:id="@+id/fab"
        android:layout_margin="16dp"
        app:layout_anchor="@+id/liner"
        app:layout_anchorGravity="center_horizontal|top"
        android:src="@drawable/add" />

    <fragment
        android:layout_width="385dp"
        android:layout_height="518dp"
        android:id="@+id/fragment"
        android:name="com.upc.help_system.view.fragment.OrdersFragment"
        />

</android.support.design.widget.CoordinatorLayout>
<android.support.design.widget.NavigationView
    android:id="@+id/navigation_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/snow"
    app:headerLayout="@layout/navigation_header"
    app:menu="@menu/drawer" />
</android.support.v4.widget.DrawerLayout>