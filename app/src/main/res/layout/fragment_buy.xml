<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/backgroundGrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:text="代  购  点"
        android:textColor="@color/secondary_text"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/buy_pot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text"
        app:layout_constraintLeft_toRightOf="@+id/textView17"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:text="代购物品"
        android:textColor="@color/secondary_text"
        android:textSize="15sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <EditText
        android:id="@+id/buy_thing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text"
        app:layout_constraintLeft_toRightOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/buy_pot" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:text="价       格"
        android:textColor="@color/secondary_text"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <EditText
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text"
        app:layout_constraintLeft_toRightOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/buy_thing" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:text="支付方式"
        android:textColor="@color/secondary_text"
        android:textSize="15sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <EditText
        android:id="@+id/pay_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text"
        app:layout_constraintLeft_toRightOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:text="截止时间"
        android:textColor="@color/secondary_text"
        android:textSize="15sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <EditText
        android:id="@+id/deadline_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text"
        app:layout_constraintLeft_toRightOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/pay_for" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:text="酬       金"
        android:textColor="@color/secondary_text"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <EditText
        android:id="@+id/fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text"
        app:layout_constraintLeft_toRightOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/deadline_content" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:text="手  机  号"
        android:textColor="@color/secondary_text"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <EditText
        android:id="@+id/phone_number_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text"
        app:layout_constraintLeft_toRightOf="@+id/textView25"
        app:layout_constraintTop_toBottomOf="@+id/fee" />

    <Button
        android:id="@+id/btn_makesure"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:textColor="@color/backgroundGrey"
        android:layout_marginTop="20dp"
        android:text="确认"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_content" />

    <Button
        android:id="@+id/btn_cancel"
        android:textColor="@color/backgroundGrey"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:text="取消"
        app:layout_constraintLeft_toRightOf="@+id/btn_makesure"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_content" />

</android.support.constraint.ConstraintLayout>